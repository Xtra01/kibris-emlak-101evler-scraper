# ============================================
# NOTIFICATION SYSTEM CONFIGURATION
# ============================================
# Copy this file to .env and fill with your credentials
# .env file is automatically ignored by git

# ============================================
# TELEGRAM CONFIGURATION
# ============================================
# Create bot: Message @BotFather on Telegram
# Get chat ID: Message @userinfobot on Telegram

# For notifications (existing)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_CHAT_ID=123456789

# For Telegram Bot control (NEW)
# Comma-separated user IDs allowed to control bot
# Get your user ID from @userinfobot
TELEGRAM_USER_IDS=123456789,987654321

# ============================================
# EMAIL CONFIGURATION (Gmail)
# ============================================
# Gmail: Enable 2FA, then create App Password at:
# https://myaccount.google.com/apppasswords

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
NOTIFY_EMAIL=recipient@example.com

# ============================================
# NOTIFICATION SETTINGS
# ============================================
# Enable/disable notification channels
ENABLE_TELEGRAM=true
ENABLE_EMAIL=true

# Event notifications
NOTIFY_ON_START=true
NOTIFY_ON_COMPLETE=true
NOTIFY_ON_ERROR=true

# Batch notifications (every N configs)
NOTIFY_EVERY_N_CONFIGS=5

